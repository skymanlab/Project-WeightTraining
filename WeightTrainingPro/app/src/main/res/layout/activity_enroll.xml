<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".EnrollActivity">

    <!-- main -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:cardElevation="10dp">

        <!-- top -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10dp">

            <!-- title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_gothic_bold"
                android:padding="20dp"
                android:text="@string/enroll_title"
                android:textAlignment="center"
                android:textSize="25dp" />
        </com.google.android.material.card.MaterialCardView><!-- End of top-->

        <!-- content -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardElevation="10dp">

            <!-- content 1. section_1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <!-- content 1-1. temp user checker -->
                <CheckBox
                    android:id="@+id/enroll_section_1_ch_temp_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/enroll_section_1_ch_temp_user" /><!-- End of content 1-1 -->

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/colorBackgroundPrimary" />

                <!-- content 1-2. name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBackgroundPrimary"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <!-- title-->
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="@string/enroll_section_1_name"
                        android:textAlignment="center"
                        android:textColor="@color/colorTextPrimary" />

                    <!-- divider -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/colorBackgroundWhite" />

                    <!-- input -->
                    <EditText
                        android:id="@+id/enroll_section_1_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorBackgroundWhite"
                        android:inputType="text"
                        android:singleLine="true" />
                </LinearLayout><!-- End of content 1-2 -->

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/colorBackgroundPrimary" />

                <!-- content 1-3. email -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBackgroundPrimary"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <!-- title -->
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="@string/enroll_section_1_email"
                        android:textAlignment="center"
                        android:textColor="@color/colorTextPrimary" />

                    <!--divider -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/colorBackgroundWhite" />

                    <!-- input -->
                    <EditText
                        android:id="@+id/enroll_section_1_email_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/colorBackgroundWhite"
                        android:inputType="textEmailAddress"
                        android:singleLine="true" />

                    <!-- at -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="@string/enroll_section_1_email_at"
                        android:textColor="@color/colorTextPrimary" />

                    <!-- host list -->
                    <Spinner
                        android:id="@+id/enroll_section_1_sp_email_host"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/colorBackgroundWhite"
                        android:backgroundTint="#FFFFFF"
                        android:spinnerMode="dropdown" />
                </LinearLayout><!-- End of content 1-3 -->

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/colorBackgroundPrimary" />

                <!-- content 1-4. password -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBackgroundPrimary"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <!-- title -->
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="@string/enroll_section_1_password"
                        android:textAlignment="center"
                        android:textColor="@color/colorTextPrimary"
                        android:textStyle="bold" />

                    <!-- divider -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/colorBackgroundWhite" />

                    <!-- input -->
                    <EditText
                        android:id="@+id/enroll_section_1_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorBackgroundWhite"
                        android:inputType="textPassword"
                        android:singleLine="true" />
                </LinearLayout><!-- End of content 1-4 -->

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/colorBackgroundPrimary" />

                <!-- content 1-5. enroll -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/enroll_section_1_bt_enroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorBackgroundPrimary"
                    android:text="@string/enroll_section_1_bt_enroll"
                    android:textColor="@color/colorTextPrimary"
                    app:cornerRadius="10dp"
                    app:elevation="15dp"
                    app:rippleColor="@color/colorBackgroundPrimary" /><!-- End of content 1-5 -->
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView><!-- end of content -->
    </com.google.android.material.card.MaterialCardView><!-- End of main -->

</LinearLayout>
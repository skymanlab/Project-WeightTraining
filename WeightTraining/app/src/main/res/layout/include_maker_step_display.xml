<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- step -->
    <LinearLayout
        android:id="@+id/include_maker_step_display_content_wrapper"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/include_maker_step_display_first_number"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/step_display_side_number_1"/>

        <ImageView
            android:id="@+id/include_maker_step_display_first_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/step_display_bar" />

        <ImageView
            android:id="@+id/include_maker_step_display_second_number"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/step_display_middle_number_2" />

        <ImageView

            android:id="@+id/include_maker_step_display_second_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/step_display_bar" />

        <ImageView
            android:id="@+id/include_maker_step_display_third_number"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/step_display_side_number_3" />

    </LinearLayout><!-- End of step -->

</androidx.constraintlayout.widget.ConstraintLayout>
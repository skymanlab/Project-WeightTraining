<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".management.project.fragment.Home.HomeFragment">

    <!-- top bar -->
    <include
        layout="@layout/include_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_default"
        android:background="@color/browser_actions_divider_color" />

    <!-- content container -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- user info -->
            <include
                layout="@layout/include_top_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_default"
                android:background="@color/browser_actions_divider_color" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_section"
                android:background="@color/browser_actions_bg_grey" />

            <com.google.android.gms.ads.AdView
                android:id="@+id/f_home_ad_mob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="bottom"
                app:adSize="SMART_BANNER"
                app:adUnitId="ca-app-pub-3940256099942544/6300978111"></com.google.android.gms.ads.AdView>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_section"
                android:background="@color/browser_actions_bg_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingStart="@dimen/section_padding_start"
                android:paddingTop="@dimen/section_padding_top"
                android:paddingEnd="@dimen/section_padding_end"
                android:paddingBottom="@dimen/section_padding_bottom">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/eland_choice_bold"
                    android:text="@string/f_home_fitness_center_member"
                    android:textAlignment="center"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="@dimen/text_sub_title_size" />

                <include
                    layout="@layout/include_dot_divider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:checkedButton="@+id/f_home_exit"
                    app:selectionRequired="true"
                    app:singleSelection="true">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/f_home_enter"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/eland_choice_medium"
                        android:text="@string/f_home_enter"
                        app:shapeAppearance="?attr/shapeAppearanceSmallComponent" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/f_home_exit"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/eland_choice_medium"
                        android:text="@string/f_home_exit"
                        app:shapeAppearance="?attr/shapeAppearanceSmallComponent" />

                </com.google.android.material.button.MaterialButtonToggleGroup>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/f_home_fitness_center_member_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
            </LinearLayout>

            <include
                layout="@layout/include_divider_section_full"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    </ScrollView><!-- End of content container -->

</LinearLayout>
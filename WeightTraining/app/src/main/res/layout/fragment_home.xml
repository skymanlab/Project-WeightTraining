<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".management.project.fragment.Home.HomeFragment">

    <!-- top bar -->
    <include
        layout="@layout/include_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_default"
        android:background="@color/browser_actions_divider_color" />

    <!-- content container -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- user info -->
            <include
                layout="@layout/include_top_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_default"
                android:background="@color/colorDividerDefault" />

            <include
                layout="@layout/include_divider_section_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- my state notification -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/section_padding_start"
                android:paddingTop="@dimen/section_padding_top"
                android:paddingEnd="@dimen/section_padding_end"
                android:paddingBottom="@dimen/section_padding_bottom">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/eland_choice_bold"
                    android:text="@string/f_home_my_state_title"
                    android:textAlignment="center"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="@dimen/text_sub_title_size" />

                <include
                    layout="@layout/include_divider_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <!--my attendance state -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/eland_choice_medium"
                            android:text="@string/f_home_my_attendance_state"
                            android:textColor="@color/colorTextBlack" />

                        <TextView
                            android:id="@+id/f_home_my_attendance_state_indicator"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/f_home_my_attendance_state_off"
                            android:textAlignment="textEnd"
                            android:textColor="@color/colorTextCaution" />

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/f_home_my_attendance_state_check"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/f_home_my_attendance_state_check" />
                </LinearLayout><!-- End of my attendance state -->

                <include
                    layout="@layout/include_dot_divider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- my active state -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/eland_choice_medium"
                        android:text="@string/f_home_my_active_state"
                        android:textColor="@color/colorTextBlack" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/f_home_my_active_state_indicator"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical" />

                        <com.google.android.material.button.MaterialButtonToggleGroup
                            android:id="@+id/f_home_my_active_state_group"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            app:selectionRequired="true"
                            app:singleSelection="true">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/f_home_my_active_state_enter"
                                style="?attr/materialButtonOutlinedStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/eland_choice_medium"
                                android:text="@string/f_home_my_active_state_enter"
                                app:shapeAppearance="?attr/shapeAppearanceSmallComponent" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/f_home_my_active_state_exercise"
                                style="?attr/materialButtonOutlinedStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/eland_choice_medium"
                                android:text="@string/f_home_my_active_state_exercise"
                                app:shapeAppearance="?attr/shapeAppearanceSmallComponent" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/f_home_my_active_state_exit"
                                style="?attr/materialButtonOutlinedStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/eland_choice_medium"
                                android:text="@string/f_home_my_active_state_exit"
                                app:shapeAppearance="?attr/shapeAppearanceSmallComponent" />

                        </com.google.android.material.button.MaterialButtonToggleGroup>
                    </FrameLayout>
                </LinearLayout><!-- End of my active state -->

            </LinearLayout>

            <include
                layout="@layout/include_divider_section_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- fitness center member list -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingStart="@dimen/section_padding_start"
                android:paddingTop="@dimen/section_padding_top"
                android:paddingEnd="@dimen/section_padding_end"
                android:paddingBottom="@dimen/section_padding_bottom">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/eland_choice_bold"
                    android:text="@string/f_home_fitness_center_member"
                    android:textAlignment="center"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="@dimen/text_sub_title_size" />

                <include
                    layout="@layout/include_dot_divider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/f_home_fitness_center_member_indicator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/eland_choice_light"
                        android:paddingTop="10dp"
                        android:paddingBottom="5dp"
                        android:textAlignment="center" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/f_home_fitness_center_member_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
                </FrameLayout>
            </LinearLayout><!-- End of fitness center member list -->

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_default"
                android:background="@color/colorDividerDefault" />

            <include
                layout="@layout/include_divider_section_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/browser_actions_bg_grey">

                <com.google.android.gms.ads.AdView
                    android:id="@+id/f_home_ad_mob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="bottom"
                    app:adSize="SMART_BANNER"
                    app:adUnitId="ca-app-pub-3940256099942544/6300978111"></com.google.android.gms.ads.AdView>
            </FrameLayout>

        </LinearLayout>
    </ScrollView><!-- End of content container -->

</LinearLayout>
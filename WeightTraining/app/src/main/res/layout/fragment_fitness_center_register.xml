<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".management.project.fragment.More.FitnessCenterRegisterFragment">

    <include
        layout="@layout/include_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_default"
        android:background="@color/colorDividerDefault" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/section_padding_start"
        android:paddingTop="@dimen/section_padding_top"
        android:paddingEnd="@dimen/section_padding_end"
        android:paddingBottom="@dimen/section_padding_bottom">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/eland_choice_medium"
            android:text="@string/f_fitness_center_register_setting"
            android:textColor="@color/colorTextBlack"
            android:textSize="@dimen/text_section_title_size" />

        <include
            layout="@layout/include_divider_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/eland_choice_medium"
                android:text="@string/f_fitness_center_register_name"
                android:textColor="@color/colorTextBlack" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/divider_vertical_layout_Start"
                android:layout_marginEnd="@dimen/divider_vertical_layout_End"
                android:background="@color/browser_actions_title_color" />

            <TextView
                android:id="@+id/f_fitness_center_register_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/eland_choice_medium"
                android:text="@string/f_fitness_center_register_name_default" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/eland_choice_medium"
                android:text="@string/f_fitness_center_register_address"
                android:textColor="@color/colorTextBlack" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/divider_vertical_layout_Start"
                android:layout_marginEnd="@dimen/divider_vertical_layout_End"
                android:background="@color/browser_actions_title_color" />

            <TextView
                android:id="@+id/f_fitness_center_register_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/eland_choice_medium"
                android:text="@string/f_fitness_center_register_address_default" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/f_fitness_center_register_contract_date_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/eland_choice_medium"
                android:text="@string/f_fitness_center_register_contract_date"
                android:textColor="@color/colorTextBlack" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/divider_vertical_layout_Start"
                android:layout_marginEnd="@dimen/divider_vertical_layout_End"
                android:background="@color/browser_actions_title_color" />

            <TextView
                android:id="@+id/f_fitness_center_register_contract_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableEnd="@drawable/right"
                android:fontFamily="@font/eland_choice_medium"
                android:gravity="center_vertical"
                android:text="@string/f_fitness_center_register_contract_date_default" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/f_fitness_center_register_expiry_date_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/eland_choice_medium"
                android:text="@string/f_fitness_center_register_expiry_date"
                android:textColor="@color/colorTextBlack" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/divider_vertical_layout_Start"
                android:layout_marginEnd="@dimen/divider_vertical_layout_End"
                android:background="@color/browser_actions_title_color" />

            <TextView
                android:id="@+id/f_fitness_center_register_expiry_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableEnd="@drawable/right"
                android:fontFamily="@font/eland_choice_medium"
                android:gravity="center_vertical"
                android:text="@string/f_fitness_center_register_contract_date_default" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
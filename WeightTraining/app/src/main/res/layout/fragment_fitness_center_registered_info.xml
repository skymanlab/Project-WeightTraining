<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".management.project.fragment.More.FitnessCenterRegisteredInfoFragment">

    <include
        layout="@layout/include_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDividerDefault" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/section_padding_start"
            android:paddingTop="@dimen/section_padding_top"
            android:paddingEnd="@dimen/section_padding_end"
            android:paddingBottom="@dimen/section_padding_bottom">

            <!-- contract date -->
            <LinearLayout
                android:id="@+id/f_fitnessCenterRegisteredInfo_contractDate_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/eland_choice_medium"
                    android:text="@string/f_fitnessCenterRegisteredInfo_contractDate"
                    android:textColor="@color/colorDividerBlack" />

                <View
                    android:layout_width="@dimen/divider_default"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/divider_vertical_layout_Start"
                    android:layout_marginEnd="@dimen/divider_vertical_layout_End"
                    android:background="@color/colorDividerDefault" />

                <TextView
                    android:id="@+id/f_fitnessCenterRegisteredInfo_contractDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableEnd="@drawable/right"
                    android:fontFamily="@font/eland_choice_medium"
                    android:gravity="center_vertical" />
            </LinearLayout><!-- End of contract date -->

            <include
                layout="@layout/include_dot_divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- expiry date -->
            <LinearLayout
                android:id="@+id/f_fitnessCenterRegisteredInfo_expiryDate_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/eland_choice_medium"
                    android:text="@string/f_fitnessCenterRegisteredInfo_expiryDate"
                    android:textColor="@color/colorDividerBlack" />

                <View
                    android:layout_width="@dimen/divider_default"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/divider_vertical_layout_Start"
                    android:layout_marginEnd="@dimen/divider_vertical_layout_End"
                    android:background="@color/colorDividerDefault" />

                <TextView
                    android:id="@+id/f_fitnessCenterRegisteredInfo_expiryDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableEnd="@drawable/right"
                    android:fontFamily="@font/eland_choice_medium"
                    android:gravity="center_vertical" />
            </LinearLayout><!-- End of expiry date -->
        </LinearLayout>

        <include
            layout="@layout/include_divider_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/divider_horizontal_layout_Start"
            android:layout_marginEnd="@dimen/divider_horizontal_layout_End" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            android:paddingStart="@dimen/section_padding_start"
            android:paddingEnd="@dimen/section_padding_end">

            <TextView
                android:id="@+id/f_fitnessCenterRegisteredInfo_registerCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:background="?attr/selectableItemBackground"
                android:fontFamily="@font/eland_choice_medium"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/f_fitnessCenterRegisteredInfo_registerCancel"
                android:textColor="@color/colorDividerBlack"
                android:visibility="visible" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
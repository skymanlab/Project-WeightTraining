<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".management.project.fragment.Training.program.MakerStep1Fragment">

    <!-- title -->
    <include
        layout="@layout/include_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/include_top_bar_divider_width"
        android:background="@color/browser_actions_divider_color" />

    <!-- step display -->
    <include
        layout="@layout/include_maker_step_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- step content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- indication -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/maker_step_content_indication_margin_start"
            android:layout_marginTop="@dimen/maker_step_content_indication_margin_top"
            android:layout_marginEnd="@dimen/maker_step_content_indication_margin_end"
            android:layout_marginBottom="@dimen/maker_step_content_indication_margin_bottom"
            android:fontFamily="@font/eland_choice_medium"
            android:text="@string/f_maker_step1_indication"
            android:textAlignment="center"
            android:textColor="@color/colorTextBack"
            android:textSize="15sp" />

        <!-- Button : direct selection -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/f_maker_step1_direct_selection"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/maker_step_content_item_margin_start"
            android:layout_marginEnd="@dimen/maker_step_content_item_margin_end"
            android:layout_marginBottom="@dimen/maker_step_content_item_margin_bottom"
            android:fontFamily="@font/eland_choice_medium"
            android:includeFontPadding="true"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingStart="30dp"
            android:paddingEnd="20dp"
            android:text="@string/f_maker_step1_direct_selection"
            android:textAlignment="textStart"
            app:cornerRadius="10dp"
            app:icon="@drawable/button_icon_arrow"
            app:iconGravity="end"
            app:strokeColor="@color/colorPrimaryDark" />

        <!-- Button : each group random -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/f_maker_step1_each_random_selection"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/maker_step_content_item_margin_start"
            android:layout_marginEnd="@dimen/maker_step_content_item_margin_end"
            android:layout_marginBottom="@dimen/maker_step_content_item_margin_bottom"
            android:fontFamily="@font/eland_choice_medium"
            android:includeFontPadding="true"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingStart="30dp"
            android:paddingEnd="20dp"
            android:text="@string/f_maker_step1_each_random_selection"
            android:textAlignment="textStart"
            app:cornerRadius="10dp"
            app:icon="@drawable/button_icon_arrow"
            app:iconGravity="end"
            app:strokeColor="@color/colorPrimaryDark" />

        <!-- Button : all group random -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/f_maker_step1_all_random_selection"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/maker_step_content_item_margin_start"
            android:layout_marginEnd="@dimen/maker_step_content_item_margin_end"
            android:layout_marginBottom="@dimen/maker_step_content_item_margin_bottom"
            android:fontFamily="@font/eland_choice_medium"
            android:includeFontPadding="true"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingStart="30dp"
            android:paddingEnd="20dp"
            android:text="@string/f_maker_step1_all_random_selection"
            android:textAlignment="textStart"
            app:cornerRadius="10dp"
            app:icon="@drawable/button_icon_arrow"
            app:iconGravity="end"
            app:strokeColor="@color/colorPrimaryDark" />
    </LinearLayout><!-- step content -->
</LinearLayout>
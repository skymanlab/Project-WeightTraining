<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".management.project.fragment.More.FitnessCenterFragment">

    <include
        layout="@layout/include_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_default"
        android:background="@color/colorDividerDefault" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Section 1 : register go -->
            <FrameLayout
                android:id="@+id/f_fitnessCenter_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:paddingStart="@dimen/section_padding_start"
                android:paddingTop="@dimen/section_padding_top"
                android:paddingEnd="@dimen/section_padding_end"
                android:paddingBottom="@dimen/section_padding_bottom">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/f_fitnessCenter_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/eland_choice_bold"
                        android:text="@string/f_fitnessCenter_name"
                        android:textColor="@color/colorTextBlack"
                        android:textSize="@dimen/text_title_size" />

                    <TextView
                        android:id="@+id/f_fitnessCenter_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/eland_choice_medium"
                        android:text="@string/f_fitnessCenter_address"
                        android:textSize="@dimen/text_sub_title_size" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/f_fitnessCenter_indicatorImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:src="@drawable/right" />
            </FrameLayout> <!-- End of Section 1 : register go -->

            <include
                layout="@layout/include_divider_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/divider_horizontal_layout_Start"
                android:layout_marginEnd="@dimen/divider_horizontal_layout_End" />

            <!-- Section 2 : register Info -->
            <LinearLayout
                android:id="@+id/f_fitnessCenter_registeredInfo_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:orientation="vertical"
                android:paddingStart="@dimen/section_padding_start"
                android:paddingTop="@dimen/section_padding_top"
                android:paddingEnd="@dimen/section_padding_end"
                android:paddingBottom="@dimen/section_padding_bottom">

                <TextView
                    android:id="@+id/f_fitnessCenter_registeredInfo_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/eland_choice_medium"
                    android:gravity="center_vertical"
                    android:text="@string/f_fitnessCenter_registeredInfo_title"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="@dimen/text_section_title_size" />

                <include
                    layout="@layout/include_dot_divider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/eland_choice_medium"
                            android:text="@string/f_fitnessCenter_registeredInfo_memberNumber"
                            android:textColor="@color/colorTextBlack" />

                        <View
                            android:layout_width="@dimen/divider_default"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/divider_vertical_layout_Start"
                            android:layout_marginEnd="@dimen/divider_vertical_layout_End"
                            android:background="@color/colorTextBlack" />

                        <TextView
                            android:id="@+id/f_fitnessCenter_registeredInfo_memberNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/eland_choice_bold"
                            android:text="@string/f_fitnessCenter_registeredInfo_memberNumber_default"
                            android:textAlignment="textEnd"
                            android:textColor="@android:color/holo_orange_dark" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/eland_choice_medium"
                            android:text="@string/f_fitnessCenter_registeredInfo_contractDate"
                            android:textColor="@color/colorTextBlack" />

                        <View
                            android:layout_width="@dimen/divider_default"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/divider_vertical_layout_Start"
                            android:layout_marginEnd="@dimen/divider_vertical_layout_End"
                            android:background="@color/colorTextBlack" />

                        <TextView
                            android:id="@+id/f_fitnessCenter_registeredInfo_contractDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/eland_choice_light"
                            android:text="@string/f_fitnessCenter_registeredInfo_contractDate_default"
                            android:textAlignment="textEnd" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/eland_choice_medium"
                            android:text="@string/f_fitnessCenter_registeredInfo_expiryDate"
                            android:textColor="@color/colorTextBlack" />

                        <View
                            android:layout_width="@dimen/divider_default"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/divider_vertical_layout_Start"
                            android:layout_marginEnd="@dimen/divider_vertical_layout_End"
                            android:background="@color/colorTextBlack" />

                        <TextView
                            android:id="@+id/f_fitnessCenter_registeredInfo_expiryDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/eland_choice_light"
                            android:text="@string/f_fitnessCenter_registeredInfo_expiryDate_default"
                            android:textAlignment="textEnd" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/eland_choice_medium"
                            android:text="@string/f_fitnessCenter_registeredInfo_attendanceDateCount"
                            android:textColor="@color/colorTextBlack" />

                        <View
                            android:layout_width="@dimen/divider_default"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/divider_vertical_layout_Start"
                            android:layout_marginEnd="@dimen/divider_vertical_layout_End"
                            android:background="@color/colorTextBlack" />

                        <TextView
                            android:id="@+id/f_fitnessCenter_registeredInfo_attendanceDateCount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/eland_choice_light"
                            android:text="@string/f_fitnessCenter_registeredInfo_attendanceDateCount_default"
                            android:textAlignment="textEnd" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout><!-- End of Section 2 : register info -->

            <include
                layout="@layout/include_divider_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/divider_horizontal_layout_Start"
                android:layout_marginEnd="@dimen/divider_horizontal_layout_End" />

            <!-- Section 3 : setting info -->
            <LinearLayout
                android:id="@+id/f_fitnessCenter_settingInfo_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:orientation="vertical"
                android:paddingStart="@dimen/section_padding_start"
                android:paddingTop="@dimen/section_padding_top"
                android:paddingEnd="@dimen/section_padding_end"
                android:paddingBottom="@dimen/section_padding_bottom">

                <TextView
                    android:id="@+id/f_fitnessCenter_settingInfo_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/eland_choice_medium"
                    android:gravity="center_vertical"
                    android:text="@string/f_fitnessCenter_settingInfo_title"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="@dimen/text_section_title_size" />

                <include
                    layout="@layout/include_dot_divider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/eland_choice_medium"
                        android:text="@string/f_fitnessCenter_settingInfo_isAllowedAccessNotification"
                        android:textColor="@color/colorTextBlack" />

                    <View
                        android:layout_width="@dimen/divider_default"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/divider_vertical_layout_Start"
                        android:layout_marginEnd="@dimen/divider_vertical_layout_End"
                        android:background="@color/colorTextBlack" />

                    <TextView
                        android:id="@+id/f_fitnessCenter_settingInfo_isAllowedAccessNotification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/eland_choice_light"
                        android:text="@string/f_fitnessCenter_settingInfo_isAllowedAccessNotification_default"
                        android:textAlignment="textEnd" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/eland_choice_medium"
                        android:text="@string/f_fitnessCenter_settingInfo_isDisclosed"
                        android:textColor="@color/colorTextBlack" />

                    <View
                        android:layout_width="@dimen/divider_default"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/divider_vertical_layout_Start"
                        android:layout_marginEnd="@dimen/divider_vertical_layout_End"
                        android:background="@color/colorTextBlack" />

                    <TextView
                        android:id="@+id/f_fitnessCenter_settingInfo_isDisclosed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/eland_choice_light"
                        android:text="@string/f_fitnessCenter_settingInfo_isDisclosed_default"
                        android:textAlignment="textEnd" />
                </LinearLayout>
            </LinearLayout><!-- End of Section 3 : setting info -->

            <include
                layout="@layout/include_divider_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/divider_horizontal_layout_Start"
                android:layout_marginEnd="@dimen/divider_horizontal_layout_End" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
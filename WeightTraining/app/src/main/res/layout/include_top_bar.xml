<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- content -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/include_top_bar_content_wrapper"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- title -->
        <TextView
            android:id="@+id/include_top_bar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/include_top_bar_dimen_title_side_blank"
            android:layout_marginEnd="@dimen/include_top_bar_dimen_title_side_blank"
            android:fontFamily="@font/eland_choice_medium"
            android:textAlignment="center"
            android:textColor="@color/colorTextBlack"
            android:textSize="18sp" />

        <!-- start image -->
        <ImageView
            android:id="@+id/include_top_bar_start_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="@dimen/include_top_bar_dimen_side_blank"
            android:clickable="false"
            android:contentDescription="@string/include_top_bar_start_text_previous"
            android:src="@drawable/left"
            android:visibility="gone" />

        <!-- start text -->
        <TextView
            android:id="@+id/include_top_bar_start_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="@dimen/include_top_bar_dimen_side_blank"
            android:clickable="false"
            android:fontFamily="@font/eland_choice_medium"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="이전"
            android:textColor="@color/colorTextBlack"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="@dimen/include_top_bar_dimen_side_blank"
            android:orientation="horizontal">

            <!-- end image 1 -->
            <ImageView
                android:id="@+id/include_top_bar_end_image_1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="@dimen/include_top_bar_end_button_layout_marginStart"
                android:clickable="false"
                android:contentDescription="@string/include_top_bar_end_text_next"
                android:src="@drawable/right"
                android:visibility="gone" />

            <!-- end image 2 -->
            <ImageView
                android:id="@+id/include_top_bar_end_image_2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="@dimen/include_top_bar_end_button_layout_marginStart"
                android:clickable="false"
                android:contentDescription="@string/include_top_bar_end_text_next"
                android:src="@drawable/notification"
                android:visibility="gone" />


            <!-- end text -->
            <TextView
                android:id="@+id/include_top_bar_end_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/include_top_bar_end_button_layout_marginStart"
                android:clickable="false"
                android:fontFamily="@font/eland_choice_medium"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="다음"
                android:textColor="@color/colorTextBlack"
                android:textSize="16sp"
                android:visibility="gone" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>